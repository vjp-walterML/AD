<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="org.example.DepartamentosClass" table="departamentos" schema="empresa">
        <id name="deptNo">
            <column name="dept_no" sql-type="int(2)"/>
        </id>
        <property name="dnombre">
            <column name="dnombre" sql-type="varchar(15)" length="15" not-null="true"/>
        </property>
        <property name="loc">
            <column name="loc" sql-type="varchar(15)" length="15" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>