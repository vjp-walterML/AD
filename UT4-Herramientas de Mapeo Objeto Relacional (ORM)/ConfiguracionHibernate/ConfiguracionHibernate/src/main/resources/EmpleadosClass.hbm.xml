<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="org.example.EmpleadosClass" table="empleados" schema="empresa">
        <id name="empNo">
            <column name="emp_no" sql-type="int(4)"/>
        </id>
        <property name="apellido">
            <column name="apellido" sql-type="varchar(20)" length="20" not-null="true"/>
        </property>
        <property name="oficio">
            <column name="oficio" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
        <property name="dir">
            <column name="dir" sql-type="int(2)" not-null="true"/>
        </property>
        <property name="fechaAlt">
            <column name="fecha_alt" sql-type="date" not-null="true"/>
        </property>
        <property name="salario">
            <column name="salario" sql-type="float(6,2)" precision="6" scale="2" not-null="true"/>
        </property>
        <property name="comision">
            <column name="comision" sql-type="float(6,2)" precision="6" scale="2" not-null="true"/>
        </property>
        <property name="deptNo">
            <column name="dept_no" sql-type="int(2)"/>
        </property>
    </class>
</hibernate-mapping>